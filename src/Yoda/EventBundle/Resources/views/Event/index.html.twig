{% extends 'EventBundle::layout.html.twig' %}

{% block body %}

    <section class="events">
        <header id="menu">
            <a class="button" href="{{ path('new') }}">Create new event</a>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a href="{{ path('logout') }}">Log Out</a>
            {% else %}
                <a href="{{ path('logout') }}">Log In</a>
            {% endif %}
        </header>

        {% for event in events %}
            <article>
                <header class="map-container">
                    <img src="http://maps.googleapis.com/maps/api/staticmap?center={{ event.location | url_encode }}&markers=color:red%7Ccolor:red%7C{{ event.location | url_encode }}&zoom=14&size=150x150&maptype=roadmap&sensor=false" />
                </header>
                <section>
                    <h3>
                        <a href="{{ path('show', {'id': event.id}) }}">{{ event.name }}</a>
                    </h3>

                    <dl>
                        <dt>where:</dt>
                        <dd>{{ event.location }}</dd>

                        <dt>when:</dt>
                        <dd>{{ event.time | date('g:ia / l M j, Y') }}</dd>

                        <dt>who:</dt>
                        <dd>Todo # of people</dd>
                    </dl>
                </section>
            </article>
        {% endfor %}
    </section>
{% endblock %}
